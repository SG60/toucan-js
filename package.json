{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "release": "turbo run build test lint && yarn changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "prettier": "2.7.1",
    "turbo": "latest",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16.18"
  }
}
